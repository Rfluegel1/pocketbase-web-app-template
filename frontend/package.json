{
	"name": "web-app-frontend",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && mkdir -p ../backend/pb/pb_public && cp -r build/* ../backend/pb/pb_public/",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"test:github": " NODE_ENV=github npm run test:integration:github && npm run test:unit",
		"lint": "prettier --plugin-search-dir --check . && eslint .",
		"format": "prettier --plugin-search-dir --write .",
		"test:integration": "playwright test",
		"test:integration:github": "POCKETBASE_EXE=linux_amd64_pocketbase playwright test",
		"test:integration:staging": "POCKETBASE_EXE=linux_amd64_pocketbase NODE_ENV=staging playwright test",
		"test:unit": "vitest --run"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/kit": "^1.20.4",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"vite": "^4.4.2",
		"vitest": "^0.32.2"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-static": "^2.0.3",
		"dotenv": "^16.3.1",
		"pocketbase": "^0.19.0"
	}
}
